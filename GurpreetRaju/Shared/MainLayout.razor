@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudSnackbarProvider />

<PageTitle>@(_currentPage ?? "Home")</PageTitle>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @if (string.IsNullOrEmpty(_currentPage))
        {
            <MudText Typo="Typo.h6" Class="ml-3">Gurpreet Raju</MudText>
        }
        else
        {
            <MudText Typo="Typo.h6">@($"Gurpreet Raju - {_currentPage}")</MudText>
        }
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu @bind-CurrentPage="_currentPage"/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{
    private bool _drawerOpen = true;

    private string _currentPage;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}