
<MudTimelineItem Color="Color.Success">
    <ItemOpposite>
        @Duration
    </ItemOpposite>
    <ItemContent>
        <MudPaper Class="pa-3">
            <MudStack Row="true">
                <MudAvatar Variant="Variant.Outlined" Elevation="1">
                    <MudImage Src="@Image" Alt="@Title" />
                </MudAvatar>
                <MudStack Spacing="1">
                    <MudText Typo="Typo.body1" Class="text-bold">@Title</MudText>
                    <MudText Typo="Typo.body2">@Institute</MudText>
                    <MudText Typo="Typo.caption">@Location</MudText>
                </MudStack>
            </MudStack>
            @ChildContent
            @if (Details != null)
            {
                <MudExpansionPanel Dense="true" Text="Responsibilities"> 
                    <MudList Dense="true" T="string">
                        @foreach (var detail in Details)
                        {
                            <MudListItem Icon="@MudBlazor.Icons.Material.Filled.ArrowRightAlt" Text="@detail" />
                        }
                    </MudList>
                </MudExpansionPanel>
            }
        </MudPaper>
    </ItemContent>
</MudTimelineItem>

@code {
    /// <summary>
    /// Entry title.
    /// </summary>
    [Parameter]
    public string Title { get; set; }

    /// <summary>
    /// The institute.
    /// </summary>
    [Parameter]
    public string Institute{ get; set; }

    /// <summary>
    /// The location.
    /// </summary>
    [Parameter]
    public string Location{ get; set; }

    /// <summary>
    /// Image source.
    /// </summary>
    [Parameter]
    public string Image { get; set; }

    /// <summary>
    /// Date stamp.
    /// </summary>
    [Parameter]
    public string Duration { get; set; }

    /// <summary>
    /// The details.
    /// </summary>
    [Parameter]
    public string[] Details { get; set; }

    /// <summary>
    /// The child content.
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
