@page "/education"

<MyPage Title="Education">
        <MudTimeline TimelinePosition="@(_showAlternateTimelime ? TimelinePosition.Alternate : TimelinePosition.Start)">
            @RenderEducationEntries
        </MudTimeline>
</MyPage>

@code{

    private RenderFragment RenderEducationEntries => __builder =>
    {
        @foreach (var entry in _entries)
        {
            <TimelineEntry AlternateTimeline="@_showAlternateTimelime"
                           Duration="@GetDuration(entry)"
                           Title="@entry.Name"
                           Location="@entry.Location"
                           Image="@entry.Image"
                           Institute="@entry.Institute">
            </TimelineEntry>
        }
    };
}