@page "/experience"

<MyPage Title="Experience">
    <MudTimeline TimelinePosition="@(_showAlternateTimelime ? TimelinePosition.Alternate : TimelinePosition.Start)">
        @foreach (var experience in _experiences)
        {
            <TimelineEntry AlternateTimeline="_showAlternateTimelime" 
                           Duration="@GetDuration(experience)"
                           Title="@experience.Role"
                           Image="@experience.LogoImage"
                           Institute="@experience.Company"
                           Location="@experience.Location"
                           Details="@experience.Responsibilities">
            </TimelineEntry>
        }
    </MudTimeline>
</MyPage>
